generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int @id @default(autoincrement())
  name          String
  email         String @unique
  password      String
  profilepic    String?
  rooms         Room[] 
  chats         Chat[]
}

model Room {
  id            Int @id @default(autoincrement())
  slug          String @unique
  userid        Int
  user          User @relation(fields: [userid], references: [id])
  chats         Chat[]
}

model Chat {
  id            Int @id @default(autoincrement())
  message       String
  senderid      Int
  sender        User @relation(fields: [senderid], references: [id])
  roomid        Int
  room          Room @relation(fields: [roomid], references: [id])
}